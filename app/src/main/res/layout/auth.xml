<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary_light">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="9dp"
        android:src="@mipmap/ic_icon_app_new_foreground"
        android:layout_marginTop="170dp"
        android:layout_centerInParent="true"
        android:id="@+id/book_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/primaryText_light"
        android:textSize="40sp"
        android:id="@+id/text_logo"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/book_logo"/>

    <com.google.android.gms.common.SignInButton
        android:layout_marginTop="16dp"
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_logo"
        />


</RelativeLayout>