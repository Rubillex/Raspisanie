<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/card"
        android:padding="14dp"
        android:layout_marginLeft="70dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выберите тему"
            android:textColor="@color/primaryText"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            />

        <RadioGroup
            android:layout_marginTop="35dp"
            android:id="@+id/Theme_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true">

            <RadioButton
                android:id="@+id/radio_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Светлая тема"
                android:textSize="16sp"
                android:textColor="@color/primaryText"
                android:layout_weight="1"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/radio_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Тёмная тема"
                android:textColor="@color/primaryText"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/radio_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/primaryText"
                android:text="По умолчанию системы"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1" />

        </RadioGroup>

    </RelativeLayout>




</RelativeLayout>