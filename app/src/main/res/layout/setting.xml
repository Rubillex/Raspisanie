<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorPrimary"
    app:blurOverlayColor="@color/colorAccent"
    android:id="@+id/root"
    android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <include layout="@layout/toolbar"
                   android:id="@+id/tools"/>

               <ScrollView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/tools">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">


                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:id="@+id/start_page"
                           android:background="?attr/selectableItemBackground"
                           android:clickable="true"
                           android:focusable="true">

                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/ic_residential"
                               android:id="@+id/start_page_icon"
                               android:clickable="false"
                               android:layout_marginLeft="16dp"
                               android:layout_centerVertical="true"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="10dp"
                               android:layout_marginLeft="56dp"
                               android:layout_alignLeft="@+id/start_page_icon"
                               android:text="Раздел по умолчанию"
                               android:textSize="@dimen/text_big"
                               android:textColor="?android:attr/textColorPrimary"
                               android:id="@+id/start_page_text"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="56dp"
                               android:layout_marginBottom="10dp"
                               android:layout_alignLeft="@+id/start_page_icon"
                               android:text="585"
                               android:textSize="@dimen/text"
                               android:id="@+id/start_page_subtext"
                               android:textColor="?android:attr/textColorSecondary"
                               android:layout_below="@+id/start_page_text"/>

                       </RelativeLayout>


                       <View
                           android:layout_width="fill_parent"
                           android:layout_height="1dp"
                           android:background="?android:attr/listDivider"
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"/>

                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:id="@+id/premium"
                           android:background="?attr/selectableItemBackground"
                           android:clickable="true"
                           android:focusable="true">

                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/ic_money"
                               android:id="@+id/premium_icon"
                               android:clickable="false"
                               android:layout_marginLeft="16dp"
                               android:layout_centerVertical="true"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="10dp"
                               android:layout_marginLeft="56dp"
                               android:layout_alignLeft="@+id/premium_icon"
                               android:text="Премиум"
                               android:textSize="@dimen/text_big"
                               android:textColor="?android:attr/textColorPrimary"
                               android:id="@+id/premium_text"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="56dp"
                               android:layout_marginBottom="10dp"
                               android:layout_alignLeft="@+id/premium_icon"
                               android:text="false"
                               android:textSize="@dimen/text"
                               android:id="@+id/premium_subtext"
                               android:textColor="?android:attr/textColorSecondary"
                               android:layout_below="@+id/premium_text"/>

                       </RelativeLayout>

                       <View
                           android:layout_width="fill_parent"
                           android:layout_height="1dp"
                           android:background="?android:attr/listDivider"
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"/>

                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:id="@+id/Theme_swicher"
                           android:background="?attr/selectableItemBackground"
                           android:clickable="true"
                           android:focusable="true">

                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/ic_drawing"
                               android:id="@+id/theme_icon"
                               android:clickable="false"
                               android:layout_marginLeft="16dp"
                               android:layout_centerVertical="true"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="10dp"
                               android:layout_marginLeft="56dp"
                               android:layout_alignLeft="@+id/theme_icon"
                               android:text="Выбор темы"
                               android:textSize="@dimen/text_big"
                               android:textColor="?android:attr/textColorPrimary"
                               android:id="@+id/theme_text"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="56dp"
                               android:layout_marginBottom="10dp"
                               android:layout_alignLeft="@+id/theme_icon"
                               android:textSize="@dimen/text"
                               android:text="Текущая тема: "
                               android:id="@+id/current_theme"
                               android:textColor="?android:attr/textColorSecondary"
                               android:layout_below="@+id/theme_text"/>

                       </RelativeLayout>



                       <View
                           android:layout_width="fill_parent"
                           android:layout_height="1dp"
                           android:background="?android:attr/listDivider"
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"/>

                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:id="@+id/Telegram"
                           android:background="?attr/selectableItemBackground"
                           android:clickable="true"
                           android:focusable="true">

                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/ic_telegram"
                               android:id="@+id/telegram_icon"
                               android:clickable="false"
                               android:layout_marginLeft="16dp"
                               android:layout_centerVertical="true"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="10dp"
                               android:layout_marginLeft="56dp"
                               android:layout_alignLeft="@+id/telegram_icon"
                               android:text="Телеграм канал"
                               android:textSize="@dimen/text_big"
                               android:layout_centerVertical="true"
                               android:textColor="?android:attr/textColorPrimary"
                               android:id="@+id/telegram_text"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="56dp"
                               android:layout_marginBottom="10dp"
                               android:layout_alignLeft="@+id/telegram_icon"
                               android:textSize="@dimen/text"
                               android:text=""
                               android:visibility="invisible"
                               android:textColor="?android:attr/textColorSecondary"
                               android:layout_below="@+id/telegram_text"/>

                       </RelativeLayout>


                       <View
                           android:layout_width="fill_parent"
                           android:layout_height="1dp"
                           android:background="?android:attr/listDivider"
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"/>

                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:id="@+id/info"
                           android:background="?attr/selectableItemBackground"
                           android:clickable="true"
                           android:focusable="true">

                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/ic_information"
                               android:id="@+id/info_icon"
                               android:clickable="false"
                               android:layout_marginLeft="16dp"
                               android:layout_centerVertical="true"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="10dp"
                               android:layout_marginLeft="56dp"
                               android:layout_alignLeft="@+id/info_icon"
                               android:text="О приложении"
                               android:textSize="@dimen/text_big"
                               android:textColor="?android:attr/textColorPrimary"
                               android:id="@+id/info_text"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="56dp"
                               android:layout_marginBottom="10dp"
                               android:layout_alignLeft="@+id/info_icon"
                               android:text="123"
                               android:textSize="@dimen/text"
                               android:id="@+id/info_sub"
                               android:textColor="?android:attr/textColorSecondary"
                               android:layout_below="@+id/info_text"/>

                       </RelativeLayout>

                       <View
                           android:layout_width="fill_parent"
                           android:layout_height="1dp"
                           android:background="?android:attr/listDivider"
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"/>





                   </LinearLayout>




               </ScrollView>


           </LinearLayout>

</RelativeLayout>