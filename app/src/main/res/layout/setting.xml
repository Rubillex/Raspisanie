<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary">

    <include layout="@layout/toolbar" />

    <RadioGroup
        android:layout_marginTop="50dp"
        android:id="@+id/Theme_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="16dp"
            android:text="Светлая тема"
            android:textSize="16dp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_weight="1"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radio_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Тёмная тема"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/radio_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="?android:attr/textColorPrimary"
            android:text="Менять тему вместе с темой системы"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1" />

<!--        <RadioButton-->
<!--            android:id="@+id/radio_pink"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:textColor="?android:attr/textColorPrimary"-->
<!--            android:text="Розовая тема"-->
<!--            android:textSize="16dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginLeft="25dp"-->
<!--            android:layout_marginTop="16dp"-->
<!--            android:layout_weight="1" />-->
    </RadioGroup>

</RelativeLayout>