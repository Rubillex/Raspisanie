<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/card"
        android:padding="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/info_card"
            android:text="Премиум"
            android:textSize="@dimen/icon_note"
            android:textStyle="bold"
            android:textColor="@color/primaryText"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_card"
            android:gravity="center"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/text_bigest"
            android:text="Для использования данной функции необходимо купить премиум или восстановить покупку. Для этого пройдите в настройки и нажмите на ''Премиум''."/>



    </RelativeLayout>




</RelativeLayout>