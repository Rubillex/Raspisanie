<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/card"
        android:padding="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/info_card"
            android:text="Помочь разработчику"
            android:textSize="@dimen/icon_note"
            android:textStyle="bold"
            android:textColor="@color/primaryText"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/info_card">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ниже вы можете выбрать сумму, которой готовы поделиться с автором данного приложения"
                android:textSize="@dimen/text_bigest"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textColor="@color/primaryText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="оплата производится с помощью Google Play"
                android:textSize="@dimen/text"
                android:textColor="@color/secondaryText"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/secondaryText"
                android:layout_marginTop="8dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/one"
                android:paddingVertical="10dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1$"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_bigest"
                    android:textColor="@color/primaryText"/>

            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/secondaryText"/>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/two"
                android:paddingVertical="10dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2$"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_bigest"
                    android:textColor="@color/primaryText"/>

            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/secondaryText"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/three"
                android:paddingVertical="10dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3$"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_bigest"
                    android:textColor="@color/primaryText"/>

            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/secondaryText"/>




        </LinearLayout>




    </RelativeLayout>




</RelativeLayout>